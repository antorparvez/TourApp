<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".AccountFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#07000000"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#805BEB"
        android:text="Edit Account Settings"/>
    <ImageView
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:background="@drawable/accound_image_background"
        android:id="@+id/user_img_af"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="3dp"/>
    <LinearLayout
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/account_background_soft"
        android:orientation="vertical">
    <Button
        android:background="@drawable/account_button_background"
        android:id="@+id/change_image_bt_af"
        android:layout_gravity="center"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:textColor="#873609ec"
        android:textSize="18dp"
        android:text="Change Image"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/user_name_tv_af"
                android:layout_width="270dp"
                android:textColor="#873609ec"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="Name : Mahmud"
                android:textSize="25dp"
                android:visibility="visible"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/user_name_et_af"
                android:layout_width="270dp"
                android:textColor="#873609ec"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="Mahmud"
                android:visibility="gone"
                android:textSize="25dp"
                android:backgroundTint="#9822ff"
                android:layout_marginLeft="10dp"/>
            <ImageButton
                android:id="@+id/user_name_ib_af"
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit_black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/user_phone_tv_af"
                android:layout_width="270dp"
                android:textColor="#873609ec"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="Phone : 980808809433"
                android:textSize="25dp"
                android:visibility="visible"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/user_phone_et_af"
                android:layout_width="270dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="25dp"
                android:text="980808809433"
                android:textColor="#873609ec"
                android:backgroundTint="#9822ff"
                android:layout_marginLeft="10dp" />
            <ImageButton
                android:id="@+id/user_phone_ib_af"
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit_black"/>
        </LinearLayout>


    <Button
        android:layout_width="310dp"
        android:background="@drawable/account_button_background"
        android:id="@+id/update_info_bt_af"
        android:layout_gravity="center_horizontal"
        android:textColor="#873609ec"
        android:textSize="18dp"
        android:layout_height="wrap_content"
        android:text="Update Info"/>
    </LinearLayout>
</LinearLayout>

</FrameLayout>